<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="filesystem" method="upgrade">
	<name>plg_filesystem_cbc</name>
	<author>Covenant Baptist Church, Lancaster, SC</author>
	<creationDate>16 Oct 2022</creationDate>
	<copyright>(C) 2022 Covenant Baptist Church, Lancaster, SC.</copyright>
	<license>UNLICENSED</license>
	<authorEmail>phopper1964@gmail.com</authorEmail>
	<authorUrl>cbclancaster.org</authorUrl>
	<version>0.0.1</version>
	<description>PLG_FILESYSTEM_CBC_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\Filesystem\CBC</namespace>
	<files>
		<filename plugin="cbc">cbc.php</filename>
		<folder>src</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/plg_filesystem_cbc.ini</language>
		<language tag="en-GB">language/en-GB/plg_filesystem_cbc.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="directories"
					type="subform"
					label="PLG_FILESYSTEM_CBC_DIRECTORIES_LABEL"
					multiple="true"
					layout="joomla.form.field.subform.repeatable-table"
					buttons="add,remove,move"
					default='[{"directory":"images"}]'
				>
					<form>
						<field
							name="directory"
							type="folderlist"
							default="images"
							label="PLG_FILESYSTEM_CBC_DIRECTORIES_DIRECTORY_LABEL"
							folderFilter=""
							exclude=""
							stripext=""
							hide_none="true"
							validate="options"
						/>
					</form>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
